# The template for the spot controller

name: {{spot_task_name}}

resources:
  # TODO(zhwu): fix this to be able to failvoer across clouds
  instance_type: t3.xlarge

file_mounts:
  ~/.sky/sky_spot_tasks/{{spot_task_name}}.yaml: {{user_yaml_path}}

run: |
  python -u -m sky_controller.spot_controller \
    ~/.sky/sky_spot_tasks/{{spot_task_name}}.yaml


